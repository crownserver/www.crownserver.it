---
import Contactform from "@/components/contactform.astro";
import Container from "@/components/container.astro";
import Sectionhead from "@/components/sectionhead.astro";
import SocialLinks from "@/components/social-links.astro";
import Layout from "@/layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import { getLangFromUrl, t } from "@/utils/i18n";

const lang = getLangFromUrl(Astro.url);
---

<Layout title={t(lang, "contact.title")}>
  <Container>
    <Sectionhead>
      <Fragment slot="title">{t(lang, "contact.title")}</Fragment>
      <Fragment slot="desc">{t(lang, "contact.subtitle")}</Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-2 gap-16 mx-auto max-w-5xl mt-16">
      {/* Contact Info */}
      <div>
        <h2 class="font-bold text-3xl text-[#333333] mb-4">
          {lang === "en" ? "Let's talk about your cloud project" : "Parliamo del tuo progetto cloud"}
        </h2>
        <p class="text-lg leading-relaxed text-gray-600 mt-4">
          {lang === "en"
            ? "Want to know more about our services? Have questions or suggestions? Fill out the form or write to us directly via email."
            : "Vuoi saperne di pi√π sui nostri servizi? Hai domande o suggerimenti? Compila il form oppure scrivici direttamente via email."
          }
        </p>

        {/* Email */}
        <div class="mt-8 space-y-4">
          <div class="flex items-center gap-3">
            <div class="w-12 h-12 gradient-crown rounded-lg flex items-center justify-center flex-shrink-0">
              <Icon class="text-white w-6 h-6" name="bx:envelope" />
            </div>
            <div>
              <h3 class="font-semibold text-[#333333]">{t(lang, "contact.email")}</h3>
              <a
                href="mailto:staff@crownserver.it"
                class="text-[#005bea] hover:underline"
              >
                staff@crownserver.it
              </a>
            </div>
          </div>

          {/* Social Media */}
          <div class="flex items-center gap-3">
            <div class="w-12 h-12 gradient-crown rounded-lg flex items-center justify-center flex-shrink-0">
              <Icon class="text-white w-6 h-6" name="bx:share-alt" />
            </div>
            <div>
              <h3 class="font-semibold text-[#333333] mb-2">{t(lang, "contact.social")}</h3>
              <SocialLinks variant="default" />
            </div>
          </div>
        </div>

        {/* Note about launch */}
        <div class="mt-8 p-4 bg-blue-50 rounded-lg border border-blue-100">
          <p class="text-sm text-gray-700">
            <strong>{lang === "en" ? "Note:" : "Nota:"}</strong>
            {lang === "en"
              ? " Our services are still under development. If you're interested, join the waitlist to receive updates and priority access at launch!"
              : " I nostri servizi sono ancora in fase di sviluppo. Se sei interessato, iscriviti alla waitlist per ricevere aggiornamenti e accesso prioritario al lancio!"
            }
          </p>
        </div>
      </div>

      {/* Contact Form */}
      <div>
        <Contactform />
      </div>
    </div>
  </Container>
</Layout>
