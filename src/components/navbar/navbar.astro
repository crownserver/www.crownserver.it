---
import Container from "@/components/container.astro";
import Logo from "@/components/logo.astro";
import LanguageSelector from "@/components/language-selector.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import { getLangFromUrl, t, getLocalizedPath } from "@/utils/i18n";

const lang = getLangFromUrl(Astro.url);

const menuitems = [
  {
    title: t(lang, "nav.products"),
    path: getLocalizedPath("/products", lang),
  },
  {
    title: t(lang, "nav.about"),
    path: getLocalizedPath("/about", lang),
  },
  {
    title: t(lang, "nav.contact"),
    path: getLocalizedPath("/contact", lang),
  },
  {
    title: t(lang, "nav.social"),
    path: "#",
    children: [
      { title: "Discord", path: "https://discord.gg/crownserver" },
      { title: "X (Twitter)", path: "https://x.com/crownserver" },
      { title: "Instagram", path: "https://instagram.com/crownserver" },
      { title: "TikTok", path: "https://tiktok.com/@crownserver" },
      { title: "Threads", path: "https://threads.net/@crownserver" },
    ],
  },
];
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href={getLocalizedPath("/", lang)}>
          <Logo size="medium" />
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item, index) => (
              <>
                {item.children && (
                  <Dropdown
                    title={item.title}
                    children={item.children}
                    lastItem={index === menuitems.length - 1}
                  />
                )}

                {!item.children && (
                  <li>
                    <a
                      href={item.path}
                      class="flex lg:px-3 py-2 items-center text-gray-600 hover:text-[#005bea] transition">
                      <span> {item.title}</span>
                    </a>
                  </li>
                )}
              </>
            ))
          }
          <li class="lg:hidden">
            <div class="flex px-3 py-2">
              <LanguageSelector />
            </div>
          </li>
        </ul>
      </MenuItems>
    </Astronav>
    <div>
      <div class="hidden lg:flex items-center gap-4">
        <LanguageSelector />
      </div>
    </div>
  </header>
</Container>
