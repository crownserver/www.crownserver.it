---
import Container from './container.astro';
import { getLangFromUrl, t } from "@/utils/i18n";

const lang = getLangFromUrl(Astro.url);
---

<section class="my-24">
  <Container>
    <div class="gradient-crown rounded-3xl p-12 md:p-16 text-center relative overflow-hidden">
      {/* Background decoration */}
      <div class="absolute inset-0 opacity-10">
        <div class="absolute top-0 left-0 w-64 h-64 bg-white rounded-full -translate-x-1/2 -translate-y-1/2"></div>
        <div class="absolute bottom-0 right-0 w-96 h-96 bg-white rounded-full translate-x-1/3 translate-y-1/3"></div>
      </div>

      {/* Content */}
      <div class="relative z-10">
        <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
          {t(lang, "waitlist.title")}
        </h2>
        <p class="text-xl text-white/90 mb-8 max-w-2xl mx-auto">
          {t(lang, "waitlist.subtitle")}
        </p>
        <button
          onclick="(window as any).openWaitlistModal()"
          class="bg-white text-[#005bea] font-bold text-lg px-8 py-4 rounded-lg hover:bg-gray-50 transition-all hover:scale-105 inline-flex items-center gap-2"
        >
          {t(lang, "waitlist.submitButton")}
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </button>
      </div>
    </div>
  </Container>
</section>
