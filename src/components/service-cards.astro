---
import { getCollection } from 'astro:content';
import { Icon } from 'astro-icon/components';
import Container from './container.astro';

// Get products collection sorted by order
const products = (await getCollection('products')).sort((a, b) => a.data.order - b.data.order);
---

<Container>
  <div class="grid md:grid-cols-3 gap-8 mt-16">
    {products.map((product) => (
      <div class="group relative bg-white rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 border border-gray-100">
        {/* Coming Soon Badge */}
        {product.data.status === 'coming-soon' && (
          <div class="absolute top-4 right-4">
            <span class="gradient-crown text-white text-xs font-bold px-3 py-1 rounded-full">
              In arrivo
            </span>
          </div>
        )}

        {/* Icon */}
        <div class="w-16 h-16 gradient-crown rounded-xl flex items-center justify-center mb-6">
          <Icon name={product.data.icon} class="w-8 h-8 text-white" />
        </div>

        {/* Title */}
        <h3 class="text-2xl font-bold text-[#333333] mb-3">
          {product.data.title}
        </h3>

        {/* Tagline */}
        <p class="text-gray-600 mb-6">
          {product.data.tagline}
        </p>

        {/* Learn More Link */}
        <a
          href="/products"
          class="inline-flex items-center gap-2 text-[#005bea] font-medium hover:gap-3 transition-all"
        >
          Scopri di pi√π
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    ))}
  </div>
</Container>
