---
import Container from './container.astro';
import { Icon } from 'astro-icon/components';
import { getLangFromUrl, t } from "@/utils/i18n";

const lang = getLangFromUrl(Astro.url);

const reasons = [
  { icon: 'bx:globe', key: 'reason1' },
  { icon: 'bx:shield-alt-2', key: 'reason2' },
  { icon: 'bx:dollar-circle', key: 'reason3' },
  { icon: 'bx:support', key: 'reason4' },
];
---

<section class="my-24">
  <Container>
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-[#333333] mb-4">
        {t(lang, "whyUs.title")}
      </h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        {t(lang, "whyUs.subtitle")}
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      {reasons.map((reason) => (
        <div class="text-center group">
          <div class="w-20 h-20 mx-auto mb-6 rounded-2xl bg-gradient-to-br from-[#00c6fb]/10 to-[#005bea]/10 flex items-center justify-center group-hover:scale-110 transition-transform">
            <div class="w-12 h-12 gradient-crown rounded-xl flex items-center justify-center">
              <Icon name={reason.icon} class="w-6 h-6 text-white" />
            </div>
          </div>
          <h3 class="text-xl font-bold text-[#333333] mb-3">
            {t(lang, `whyUs.${reason.key}.title`)}
          </h3>
          <p class="text-gray-600">
            {t(lang, `whyUs.${reason.key}.description`)}
          </p>
        </div>
      ))}
    </div>
  </Container>
</section>
