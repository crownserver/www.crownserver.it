---
interface Props {
  href: string;
  size?: "md" | "lg";
  block?: boolean;
  style?: "outline" | "primary" | "inverted" | "muted";
  class?: string;
  [x: string]: any;
}

const {
  href,
  block,
  size = "lg",
  style = "primary",
  class: className,
  ...rest
} = Astro.props;

const sizes = {
  lg: "px-5 py-2.5",
  md: "px-4 py-2",
};

const styles = {
  outline: "bg-white border-2 border-[#333333] hover:bg-gray-100 text-[#333333]",
  primary: "gradient-crown text-white hover:opacity-90 border-2 border-transparent",
  inverted: "bg-white text-[#333333] border-2 border-transparent hover:bg-gray-50",
  muted: "bg-gray-100 hover:bg-gray-200 border-2 border-transparent text-[#333333]",
};
---

<a
  href={href}
  {...rest}
  class:list={[
    "rounded-sm text-center transition focus-visible:ring-2 ring-offset-2 ring-gray-200",
    block && "w-full",
    sizes[size],
    styles[style],
    className,
  ]}
  ><slot />
</a>
